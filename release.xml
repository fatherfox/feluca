
<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>bin</id>
	<formats>
		<format>zip</format>
	</formats>

	<files>
		<file>
			<source>feluca-core/src/main/resources/log4j.properties</source>
			<outputDirectory>conf</outputDirectory>
		</file>
		<file>
			<source>feluca-core/src/main/resources/config.properties</source>
			<outputDirectory>conf</outputDirectory>
		</file>
	</files>
	<fileSets>
		<fileSet>
			<directory>feluca-core/bin</directory>
			<outputDirectory>bin</outputDirectory>
			<fileMode>0755</fileMode>
		</fileSet>
		<fileSet>
			<directory>feluca-core/leader_repo</directory>
			<outputDirectory>leader_repo</outputDirectory>
			<includes> 
				<include>data</include>
				<include>model</include>
				<include>resources</include>			
			</includes>
		</fileSet>
		<fileSet>
			<directory>feluca-core/worker_repo</directory>
			<outputDirectory>worker_repo</outputDirectory>
			<includes> 
				<include>data</include>
				<include>model</include>
				<include>resources</include>			
			</includes>
		</fileSet>
		<fileSet>
			<directory>feluca-core/logs</directory>
			<outputDirectory>logs</outputDirectory>
			<excludes>
				<exclude>**/*</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>feluca-core/pids</directory>
			<outputDirectory>pids</outputDirectory>
		</fileSet>
	</fileSets>
	<moduleSets>
		<moduleSet>
			<binaries>
				<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
				<outputDirectory>./</outputDirectory>
				<unpack>false</unpack>
				<dependencySets>
					<dependencySet>
						<outputDirectory>lib</outputDirectory>
						<excludes>
						<exclude>org.shanbo:feluca*</exclude>
						</excludes>
					</dependencySet>
				</dependencySets>
			</binaries>
		</moduleSet>
	</moduleSets>
</assembly>
